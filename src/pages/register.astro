---
import Layout from "@/layouts/Layout.astro";
import { actions } from "astro:actions";

const result = Astro.getActionResult(actions.register);
const isSuccess = result && !result.error;
const error = result?.error;
const data = result?.data;
---

<Layout>
  <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div>
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
          Crea tu cuenta
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
          ¿Ya tienes una cuenta?
          <a href="/login" class="font-medium text-primary/80 hover:text-primary">
            Inicia sesión aquí
          </a>
        </p>
      </div>

      {error && (
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">Error</h3>
              <p class="mt-2 text-sm text-red-700">{error.message}</p>
            </div>
          </div>
        </div>
      )}

      {isSuccess && data?.requiresConfirmation && (
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-green-800">¡Registro exitoso!</h3>
              <div class="mt-2 text-sm text-green-700">
                <p>{data.message}</p>
                <p class="mt-2">
                  <strong>Importante:</strong> Revisa tu carpeta de spam si no encuentras el correo.
                </p>
              </div>
              <div class="mt-4">
                <div class="-mx-2 -my-1.5 flex">
                  <a
                    href="/login"
                    class="bg-green-50 px-2 py-1.5 rounded-md text-sm font-medium text-green-800 hover:bg-green-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-green-50 focus:ring-green-600"
                  >
                    Ir a iniciar sesión
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      )}

      {!isSuccess && (
      <section class="border-2 rounded-3xl bg-card text-card-foreground">
     	<div class="p-6 space-y-4">
	      	<form method="POST" action={actions.register} class="mt-8 space-y-6" id="registration-form">
	          <!-- Personal Information -->
	          <div class="space-y-4">
	            <h3 class="text-lg font-medium text-gray-900">Información Personal</h3>

	            <div>
	              <label for="name" class="block text-sm font-medium text-gray-700">
	                Nombre completo
	              </label>
	              <input
	                id="name"
	                name="name"
	                type="text"
	                autocomplete="name"
	                required
	                class="mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
	                placeholder="Tu nombre completo"
	                value={Astro.url.searchParams.get('name') || ''}
	              />
	            </div>

	            <div>
	              <label for="email" class="block text-sm font-medium text-gray-700">
	                Correo electrónico
	              </label>
	              <input
	                id="email"
	                name="email"
	                type="email"
	                autocomplete="email"
	                required
	                class="mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
	                placeholder="tu@email.com"
	                value={Astro.url.searchParams.get('email') || ''}
	              />
	            </div>

	            <div>
	              <label for="phone" class="block text-sm font-medium text-gray-700">
	                Teléfono de contacto
	              </label>
	              <input
	                id="phone"
	                name="phone"
	                type="tel"
	                autocomplete="tel"
	                required
	                class="mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
	                placeholder="5512345678"
	                pattern="[0-9]{10,15}"
	                value={Astro.url.searchParams.get('phone') || ''}
	              />
	              <p class="mt-1 text-sm text-gray-500">Formato: 10-15 dígitos sin espacios ni guiones</p>
	            </div>
	          </div>

	          <!-- Password Section -->
	          <div class="space-y-4">
	            <h3 class="text-lg font-medium text-gray-900">Contraseña</h3>

	            <div>
	              <label for="password" class="block text-sm font-medium text-gray-700">
	                Contraseña
	              </label>
	              <input
	                id="password"
	                name="password"
	                type="password"
	                autocomplete="new-password"
	                required
	                minlength="6"
	                class="mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
	                placeholder="Mínimo 6 caracteres"
	              />
	            </div>

	            <div>
	              <label for="confirm-password" class="block text-sm font-medium text-gray-700">
	                Confirmar contraseña
	              </label>
	              <input
	                id="confirm-password"
	                name="confirm-password"
	                type="password"
	                autocomplete="new-password"
	                required
	                minlength="6"
	                class="mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
	                placeholder="Repite tu contraseña"
	              />
	            </div>
	          </div>

	          <!-- Organization Section -->
	          <div class="space-y-4">
	            <h3 class="text-lg font-medium text-gray-900">Tipo de Organización</h3>

	            <div>
	              <label class="block text-sm font-medium text-gray-700 mb-3">
	                ¿Cómo te registras en la plataforma?
	              </label>

	              <div class="space-y-2">
	                <div class="flex items-center">
	                  <input
	                    id="org-personal"
	                    name="orgType"
	                    type="radio"
	                    value="personal"
	                    required
	                    class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300"
	                    checked
	                  />
	                  <label for="org-personal" class="ml-2 block text-sm text-gray-900">
	                    <span class="font-medium">Personal</span>
	                    <span class="text-gray-500 block">Soy una persona individual que rescata/cuida mascotas</span>
	                  </label>
	                </div>

	                <div class="flex items-center">
	                  <input
	                    id="org-association"
	                    name="orgType"
	                    type="radio"
	                    value="association"
	                    required
	                    class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300"
	                  />
	                  <label for="org-association" class="ml-2 block text-sm text-gray-900">
	                    <span class="font-medium">Organización/Asociación</span>
	                    <span class="text-gray-500 block">Pertenezco a una fundación, refugio, asociación, etc.</span>
	                  </label>
	                </div>
	              </div>
	            </div>

	            <!-- Organization Fields (hidden by default) -->
	            <div id="association-fields" class="space-y-4 hidden">
	              <div>
	                <label for="orgName" class="block text-sm font-medium text-gray-700">
	                  Nombre de la organización
	                </label>
	                <input
	                  id="orgName"
	                  name="orgName"
	                  type="text"
	                  class="mt-1 appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
	                  placeholder="Ej: Fundación Amor Animal A.C."
	                />
	              </div>

	              <div>
	                <label for="orgRole" class="block text-sm font-medium text-gray-700">
	                  Tu rol en la organización
	                </label>
	                <select
	                  id="orgRole"
	                  name="orgRole"
	                  class="mt-1 block w-full px-3 py-2 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
	                >
	                  <option value="">Selecciona tu rol</option>
	                  <option value="owner">Fundador/Propietario</option>
	                  <option value="admin">Administrador</option>
	                  <option value="member">Miembro/Voluntario</option>
	                </select>
	              </div>
	            </div>
	          </div>

	          <!-- Terms -->
	          <div class="text-sm text-gray-600">
	            <p>Al crear una cuenta, aceptas nuestros Términos de Servicio y Política de Privacidad.</p>
	          </div>

	          <!-- Submit Button -->
	          <div>
	            <button
	              type="submit"
	              id="register-btn"
	              class="group relative w-full inline-flex items-center justify-center h-11 rounded-md bg-primary text-primary-foreground hover:opacity-95 hover:cursor-pointer disabled:opacity-60"
	            >
	              <span class="absolute left-0 inset-y-0 flex items-center pl-3">
	                <svg
	                  class="h-5 w-5 text-primary-foreground group-hover:text-primary-foreground/60"
	                  xmlns="http://www.w3.org/2000/svg"
	                  viewBox="0 0 20 20"
	                  fill="currentColor"
	                  aria-hidden="true"
	                >
	                  <path
	                    fill-rule="evenodd"
	                    d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"
	                    clip-rule="evenodd"
	                  />
	                </svg>
	              </span>
	              <span data-text="default">Crear cuenta</span>
	              <span data-text="loading" class="hidden">Creando cuenta...</span>
	            </button>
	          </div>
	        </form>
	      </div>
      </section>
      )}
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.getElementById('registration-form') as HTMLFormElement;
      const password = document.getElementById('password') as HTMLInputElement;
      const confirmPassword = document.getElementById('confirm-password') as HTMLInputElement;
      const submitBtn = document.getElementById('register-btn') as HTMLButtonElement;
      const orgPersonal = document.getElementById('org-personal') as HTMLInputElement;
      const orgAssociation = document.getElementById('org-association') as HTMLInputElement;
      const associationFields = document.getElementById('association-fields') as HTMLDivElement;
      const orgNameInput = document.getElementById('orgName') as HTMLInputElement;
      const orgRoleInput = document.getElementById('orgRole') as HTMLSelectElement;

      if (!form || !password || !confirmPassword || !submitBtn) return;

      // Toggle organization fields
      function toggleOrgFields() {
        if (orgAssociation && orgAssociation.checked) {
          associationFields.classList.remove('hidden');
          orgNameInput.required = true;
          orgRoleInput.required = true;
        } else {
          associationFields.classList.add('hidden');
          orgNameInput.required = false;
          orgRoleInput.required = false;
          orgNameInput.value = '';
          orgRoleInput.value = '';
        }
      }

      // Initial setup
      if (orgPersonal && orgAssociation) {
        toggleOrgFields();
        orgPersonal.addEventListener('change', toggleOrgFields);
        orgAssociation.addEventListener('change', toggleOrgFields);
      }

      // Password validation
      function validatePasswords() {
        if (password.value !== confirmPassword.value && confirmPassword.value !== '') {
          confirmPassword.setCustomValidity('Las contraseñas no coinciden');
          return false;
        } else {
          confirmPassword.setCustomValidity('');
          return true;
        }
      }

      // Phone validation
      const phoneInput = document.getElementById('phone') as HTMLInputElement;
      if (phoneInput) {
        phoneInput.addEventListener('input', function() {
          // Remove non-numeric characters
          this.value = this.value.replace(/\D/g, '');
        });
      }

      // Real-time validation
      confirmPassword.addEventListener('input', validatePasswords);
      password.addEventListener('input', validatePasswords);

      // Form submission handling
      form.addEventListener('submit', function(e) {
        if (!validatePasswords()) {
          e.preventDefault();
          return false;
        }

        // Validate organization fields
        if (orgAssociation && orgAssociation.checked) {
          if (!orgNameInput.value.trim()) {
            e.preventDefault();
            orgNameInput.focus();
            return false;
          }
          if (!orgRoleInput.value) {
            e.preventDefault();
            orgRoleInput.focus();
            return false;
          }
        }

        // Add loading state
        submitBtn.disabled = true;
        const defaultText = submitBtn.querySelector('[data-text="default"]') as HTMLElement;
        const loadingText = submitBtn.querySelector('[data-text="loading"]') as HTMLElement;

        if (defaultText && loadingText) {
          defaultText.classList.add('hidden');
          loadingText.classList.remove('hidden');
        }
      });
    });
  </script>
</Layout>
